<hr>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path %>
<% end %>

<br>

<%= image_tag @user.avatar.url if @user.avatar? %>
<h3><%= @user.name %></h3>
<p><%= @user.email %></p>
<p><%= simple_format @user.intro %></p>

<br>

<% if @user == current_user %>
  <h5>給買家的話：</h5>
  <p><%= simple_format @user.contact_info %></p>
<% end %>

<hr>

<% if @user == current_user %>
  <h3>你發起的甜點集資</h3>

  <% @desserts.each do |dessert| %>
    <%= link_to dessert_path(dessert) do %>
      <%= image_tag dessert.image.url if dessert.image? %>
      <h4><%= dessert.name %></h4>
    <% end %>
  <% end %>

  <hr>

  <h3>你贊助的甜點集資</h3>

  <% @orders.each do |order| %>
    <%= link_to order_path(order) do %>
      <%= image_tag order.dessert.image.url if order.dessert.image? %>
      <h4><%= order.dessert.name %></h4>
    <% end %>
  <% end %>


<% end %>