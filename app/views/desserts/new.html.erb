<style>
    input[type="submit"]{padding:5px 15px; background:#ccc; border:0 none;
cursor:pointer;
-webkit-border-radius: 5px;
border-radius: 5px; }

    input[type="text"]{padding:5px 15px; border:2px black solid;
cursor:pointer;
-webkit-border-radius: 5px;
border-radius: 5px; }

.demo .container2{
    padding-top: 50px;
    text-align: center
}
</style>


<div class="container">

  <!-- 錯誤訊息 -->
  <% if @dessert.errors.any? %>
    <h2>We have some errors here !</h2>
    <ul>
      <% @dessert.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <!-- Create New Dessert Form -->
  <%= form_for @dessert do |f| %>

    <p><%= f.label :name, '甜點名稱' %></p>
    <p><%= f.text_field :name %></p>

    <br>

    <p><%= f.label :image, "甜點照片" %></p>
    <p><%= f.file_field :image %></p>
    
    <p>或在此貼上甜點照片的ig網址</p>
    <p><%= f.text_field :ig_image_url %></p>

    <br>

    <p><%= f.label :price, '單價' %></p>
    <p><%= f.number_field :price %></p>

    <br>

    <p><%= f.label :amount, '販售數量' %></p>
    <p><%= f.number_field :amount %></p>

    <br>

    <p><%= f.label :category, "地區" %></p>
    <p><%= f.collection_select :category_id, Category.all, :id, :area, {}, {} %></p>

    <br>

    <p><%= f.label :location, "面交地點" %></p>
    <p><%= f.text_field :location %></p>

    <br>
    
    <p><%= f.label :description, '甜點介紹' %></p>
    <p><%= f.text_area :description %></p>

    <br>

    <p><%= f.label :production_time, '製作所需時間' %></p>
    <p><%= f.text_field :production_time %></p>

    <br>

    <p><%= f.label :excess_time, '募資截止時間' %></p>
    <p><%= f.datetime_select :excess_time, default: Time.now %></p>

    <br>

    <p><%= f.label :pick_time, '面交日期時間' %></p>
    <p><%= f.datetime_select :pick_time, default: Time.now %></p>

    <br>

    <%= f.submit %>
    <%= link_to '取消', desserts_path, class: "btn btn-default" %>

  <% end %>

</div>

